<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="0.5"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/card_separator"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="1"
            android:textStyle="bold"
            android:id="@+id/visit_number"
            android:textColor="@color/card_grid_text"
            android:fontFamily="@font/avenir_light"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="12/May/2018"
            android:id="@+id/visit_date"
            android:textColor="@color/card_grid_text"
            android:fontFamily="@font/avenir_light"
            android:gravity="center"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent">

            <com.uniquestudio.library.CircleCheckBox
                android:id="@+id/a_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                app:animation_duration="50"
                app:border_color="@color/white"
                app:tick_color="@color/card_light_text"
                app:background_color="@color/white"
                app:border_width="0dp"
                app:tick_width="1dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent">

            <com.uniquestudio.library.CircleCheckBox
                android:id="@+id/o_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                app:animation_duration="50"
                app:border_color="@color/white"
                app:tick_color="@color/card_light_text"
                app:background_color="@color/white"
                app:border_width="0dp"
                app:tick_width="1dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent">

            <com.uniquestudio.library.CircleCheckBox
                android:id="@+id/p_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                app:animation_duration="50"
                app:border_color="@color/white"
                app:tick_color="@color/card_light_text"
                app:background_color="@color/white"
                app:border_width="0dp"
                app:tick_width="1dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent">

            <com.uniquestudio.library.CircleCheckBox
                android:id="@+id/h_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                app:animation_duration="50"
                app:border_color="@color/white"
                app:tick_color="@color/card_light_text"
                app:background_color="@color/white"
                app:border_width="0dp"
                app:tick_width="1dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent">

            <com.uniquestudio.library.CircleCheckBox
                android:id="@+id/ws_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                app:animation_duration="50"
                app:border_color="@color/white"
                app:tick_color="@color/card_light_text"
                app:background_color="@color/white"
                app:border_width="0dp"
                app:tick_width="1dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent">

            <com.uniquestudio.library.CircleCheckBox
                android:id="@+id/ah_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                app:animation_duration="50"
                app:border_color="@color/white"
                app:tick_color="@color/card_light_text"
                app:background_color="@color/white"
                app:border_width="0dp"
                app:tick_width="1dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent">

            <com.uniquestudio.library.CircleCheckBox
                android:id="@+id/su_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                app:animation_duration="50"
                app:border_color="@color/white"
                app:tick_color="@color/card_light_text"
                app:background_color="@color/white"
                app:border_width="0dp"
                app:tick_width="1dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent">

            <com.uniquestudio.library.CircleCheckBox
                android:id="@+id/fl_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                app:animation_duration="50"
                app:border_color="@color/white"
                app:tick_color="@color/card_light_text"
                app:background_color="@color/white"
                app:border_width="0dp"
                app:tick_width="1dp"/>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/card_separator"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/card_separator"/>

</LinearLayout>