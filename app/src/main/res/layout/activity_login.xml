<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/activity_login_contents"/>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            android:text="Uzazi Salama Health Facility App"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/avenir_light"
            android:textStyle="bold"
            android:textSize="26sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:id="@+id/login_wrap"
            android:background="@drawable/border_one"
            android:layout_centerInParent="true">

            <EditText
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:hint="Username"
                android:id="@+id/username_et"
                android:textColorHint="@color/card_grid_tex"
                android:textColor="@color/card_title_text"
                android:fontFamily="@font/avenir_light"
                android:paddingLeft="4dp"/>

            <EditText
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:hint="Password"
                android:id="@+id/password_et"
                android:inputType="textPassword"
                android:layout_marginTop="16dp"
                android:textColorHint="@color/card_grid_tex"
                android:textColor="@color/card_title_text"
                android:fontFamily="@font/avenir_light"
                android:paddingLeft="4dp"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/border_color_primary"
                android:textColor="@color/colorPrimary"
                android:text="Login"
                android:id="@+id/login_button"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:textAllCaps="false"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/login_wrap"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/avenir_light"
            android:id="@+id/messages"
            android:textColor="@color/card_title_text"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>