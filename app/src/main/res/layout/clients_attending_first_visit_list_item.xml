<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/list_item_container"
        app:layout_constraintTop_toBottomOf="@id/separator_top"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/card_separator"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/google_sans_regular"
            android:gravity="start"
            android:text="Jones Mona"
            android:textColor="@color/card_grid_tex"
            android:id="@+id/client_name_value"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/google_sans_regular"
            android:gravity="start"
            android:text="Anc Number"
            android:textColor="@color/card_grid_tex"
            android:id="@+id/client_anc_number"
            android:layout_marginLeft="8dp"/>


        <TextView
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/google_sans_regular"
            android:gravity="start"
            android:text="Village"
            android:textColor="@color/card_grid_tex"
            android:id="@+id/client_village_value"
            android:layout_marginLeft="8dp"/>


        <TextView
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/google_sans_regular"
            android:gravity="start"
            android:text="Phone Number"
            android:textColor="@color/card_grid_tex"
            android:id="@+id/client_phone_value"
            android:layout_marginLeft="8dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/card_separator"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/card_separator"
        app:layout_constraintTop_toBottomOf="@id/list_item_container"/>

</android.support.constraint.ConstraintLayout>