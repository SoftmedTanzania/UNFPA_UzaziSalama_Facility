<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/card_separator"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/referral_client_names"
                android:gravity="start"
                android:layout_marginLeft="8dp"
                android:text="Khalima Ruge"
                android:textSize="16sp"
                android:textColor="@color/card_grid_text"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="+255755688678"
                android:textSize="16sp"
                android:id="@+id/referral_client_phone"
                android:textColor="@color/card_grid_text"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Hai"
                android:textSize="16sp"
                android:id="@+id/referral_client_village"
                android:textColor="@color/card_grid_text"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Feeling sick this is the third day"
                android:textSize="16sp"
                android:id="@+id/referral_reason"
                android:textColor="@color/card_grid_text"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Pending"
                android:id="@+id/referral_status"
                android:textSize="16sp"
                android:textColor="@color/card_grid_text"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/card_separator"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/card_separator"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>